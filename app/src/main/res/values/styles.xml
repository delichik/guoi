<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout_White" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="colorControlNormal">@color/text_dark</item>
        <item name="colorControlActivated">@color/text_dark</item>
        <item name="colorControlHighlight">@color/text_dark</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>
